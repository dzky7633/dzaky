  <script>
    // Small interactive bits
    function resetForm(){ document.getElementById('contactForm').reset(); document.getElementById('formMsg').textContent=''; }
    document.getElementById('contactForm').addEventListener('submit', function(e){
      e.preventDefault();
      var name = document.getElementById('name').value.trim();
      var email = document.getElementById('email').value.trim();
      var msg = document.getElementById('message').value.trim();
      if(!name || !email || !msg){ document.getElementById('formMsg').textContent = 'Harap isi semua field yang diperlukan.'; return; }
      document.getElementById('formMsg').textContent = 'Terima kasih, pesan Anda telah terkirim (demo).';
      // In production: kirim via fetch ke endpoint server atau layanan email
      this.reset();
    });

    // Apply simple fade-up delays
    document.querySelectorAll('.fade-up').forEach(function(el, i){ el.style.animationDelay = (i*90)+'ms'; });
  </script>
